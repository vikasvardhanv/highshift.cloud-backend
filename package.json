{
  "name": "social-oauth-backend",
  "version": "1.0.0",
  "description": "Secure Node.js/Express backend for connecting multiple social media accounts via OAuth2 PKCE and posting via a single per-user API key.",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "cd frontend && npm install --production=false && npm run build",
    "postinstall": "npm run build",
    "test": "jest --runInBand",
    "lint": "node -e \"console.log('Add eslint if desired')\""
  },
  "dependencies": {
    "agenda": "^5.0.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-swagger-generator": "^1.1.17",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "mongoose": "^8.8.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  }
}
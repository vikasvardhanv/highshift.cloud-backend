# Server
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
MONGODB_URI=mongodb://localhost:27017/social_oauth_backend

# Security
# 32-byte key (base64) for AES-256-GCM token encryption.
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
TOKEN_ENC_KEY_BASE64=REPLACE_ME_32_BYTES_BASE64
# CORS allowlist (comma separated). Example: http://localhost:5173,https://yourapp.com
CORS_ORIGINS=http://localhost:5173
# Where to send users after a successful /connect/:platform/callback.
# The backend will redirect to this URL and append ?apiKey=...&platform=...&accountId=...
CLIENT_SUCCESS_REDIRECT=http://localhost:5173/connect/success
CLIENT_ERROR_REDIRECT=http://localhost:5173/connect/error

# OAuth Redirect URI base (must match provider configuration)
OAUTH_CALLBACK_BASE_URL=http://localhost:3000/connect

# Twitter/X (OAuth2 PKCE)
TWITTER_CLIENT_ID=REPLACE_ME
TWITTER_CLIENT_SECRET=OPTIONAL_FOR_PKCE_PUBLIC_CLIENTS
TWITTER_SCOPES=tweet.read tweet.write users.read offline.access

# Meta (Facebook + Instagram Graph API)
FACEBOOK_APP_ID=REPLACE_ME
FACEBOOK_APP_SECRET=REPLACE_ME
FACEBOOK_SCOPES=public_profile,pages_show_list,pages_read_engagement,pages_manage_posts,pages_manage_metadata
# Instagram requires a Business/Creator IG account connected to a Facebook Page.
INSTAGRAM_SCOPES=instagram_basic,instagram_content_publish,pages_show_list

# LinkedIn
LINKEDIN_CLIENT_ID=REPLACE_ME
LINKEDIN_CLIENT_SECRET=REPLACE_ME
LINKEDIN_SCOPES=openid profile w_member_social offline_access

# Google (YouTube Data API)
GOOGLE_CLIENT_ID=REPLACE_ME
GOOGLE_CLIENT_SECRET=REPLACE_ME
GOOGLE_SCOPES=https://www.googleapis.com/auth/youtube.upload https://www.googleapis.com/auth/youtube.readonly

